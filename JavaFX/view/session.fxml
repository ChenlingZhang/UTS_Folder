<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.paint.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox styleClass="background" prefHeight="300.0" prefWidth="600.0" spacing="50" alignment="CENTER_RIGHT"
      xmlns:fx="http://javafx.com/fxml" fx:controller="controller.SessionController">
    <VBox styleClass="header" spacing="30">
        <ImageView fitHeight="50" fitWidth="152" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@uts.png" />
            </image>
        </ImageView>
        <Label alignment="TOP_LEFT" contentDisplay="TOP" styleClass="h1" text="Tuition Management System" textAlignment="CENTER"/>
    </VBox>
    <VBox alignment="CENTER_RIGHT"  spacing="20">
        <Button onAction="#login" prefHeight="25.0" prefWidth="250.0" text="Login"/> 
        <Button onAction="#exit" text="Exit"/>
    </VBox>
    <stylesheets>
        <URL value="@tmsfx.css" />
    </stylesheets>
</VBox>